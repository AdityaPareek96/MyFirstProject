

<% layout('/Layout/boilerplate') -%>

<script>
  let mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="row col-11">
  <div class="col-8 offset-2 mt-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2 datalist-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="datalist_image"
    />
    <div class="card-body">
      <br />
      <p class="card-text">
        Owned By:
        <i><b>
          <%= listing.owner && listing.owner.username ? listing.owner.username : 'Unknown' %>
        </b></i>
      </p>
      <%= listing.description %><br />
      â‚¹<%= listing.price.toLocaleString("en-IN") %><br />
      <%= listing.location %><br />
      <%= listing.country %>
    </div>
  </div>

  <br />

  <div class="show_btn">
    <% if (CurrUser && listing.owner && CurrUser._id.equals(listing.owner._id)) { %>
      <button class="edit_btn col-1 offset-2">
        <a href="/datalist/<%= listing.id %>/edit">Edit</a>
      </button>

      <form method="POST" action="/datalist/<%= listing.id %>?_method=DELETE">
        <button class="delete_btn col-12 offset-3">Delete</button>
      </form>
    <% } %>
  </div>

  <div class="mb-3 mt-3">
    <% if (CurrUser) { %>
      <form
        method="POST"
        action="/datalist/<%= listing.id %>/review"
        class="needs-validation"
        novalidate
      >
        <div class="col-8 offset-2">
          <fieldset class="starability-basic">
            <div class="mt-3">
              <h5>Leave a Review</h5>
              <label for="comment" class="form-label">Rating</label> <br />
            </div>

            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <div class="mt-3">
            <label for="comment" class="form-label">Comments</label> <br />
            <textarea
              name="review[comment]"
              id="comment"
              rows="5"
              cols="93"
              class="form-label"
              required
            ></textarea>
            <div class="invalid-feedback">Please add valid comment.</div>
          </div>

          <button class="btn btn-outline-dark mt-2">Submit</button>
        </div>
      </form>
    <% } %>

    <div class="row mb-3 m-2">
      <div class="offset-2"></div>
      <% for (let review of listing.review) { %>
        <div class="card col-4 offset-2 mb-3">
          <div class="card-body">
            <h5 class="card-title">
              @<%= review.author && review.author.username ? review.author.username : 'Anonymous' %>
            </h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          </div>

          <form
            method="POST"
            action="/datalist/<%= listing.id %>/review/<%= review.id %>?_method=DELETE"
          >
            <button class="btn btn-danger mb-2">Delete</button>
          </form>
        </div>
      <% } %>
    </div>

    <div class="col-1 offset-2">
      <div id="map">Map</div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>

